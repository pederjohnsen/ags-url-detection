{
	"name": "ags-url-detection",
	"version": "1.0.4",
	"description": "Which AGS website page are you on? Is it a game? Is it a wiki entry? Perfect for your WebExtension or userscript.",
	"keywords": [
		"ags",
		"page",
		"routes",
		"detect",
		"test",
		"extension"
	],
	"repository": "pederjohnsen/ags-url-detection",
	"license": "MIT",
	"author": "Peder Johnsen (pederjohnsen.com)",
	"exports": {
		"import": "./esm/index.js",
		"require": "./index.js"
	},
	"main": "cjs/index.js",
	"module": "esm/index.js",
	"files": [
		"cjs/index.js",
		"cjs/index.d.ts",
		"esm/index.js",
		"esm/index.d.ts"
	],
	"scripts": {
		"ava": "TS_NODE_COMPILER_OPTIONS='{\"esModuleInterop\": true}' ava --timeout 30s",
		"build": "rollup -c",
		"prepack": "rollup -c",
		"test": "run-p build ava xo",
		"watch": "rollup -c --watch",
		"xo": "xo"
	},
	"xo": {
		"envs": [
			"browser"
		],
		"ignore": [
			"demo"
		],
		"overrides": [
			{
				"files": [
					"*.ts"
				],
				"rules": {
					"@typescript-eslint/no-unnecessary-condition": "error"
				}
			}
		],
		"rules": {
			"camelcase": "off",
			"comma-dangle": [
				"error",
				"always-multiline"
			],
			"import/no-useless-path-segments": "off",
			"unicorn/import-index": "off",
			"unicorn/no-unreadable-array-destructuring": "off"
		}
	},
	"ava": {
		"extensions": [
			"ts"
		],
		"require": [
			"esm",
			"ts-node/register"
		]
	},
	"devDependencies": {
		"@babel/polyfill": "^7.11.5",
		"@rollup/plugin-json": "^4.1.0",
		"@rollup/plugin-typescript": "^6.0.0",
		"@sindresorhus/tsconfig": "^0.7.0",
		"@types/jsdom": "^16.2.4",
		"ava": "^3.12.1",
		"esm": "^3.2.25",
		"jsdom": "^16.4.0",
		"npm-run-all": "^4.1.5",
		"parcel-bundler": "^1.12.4",
		"rollup": "^2.28.1",
		"rollup-plugin-terser": "^7.0.2",
		"strip-indent": "^3.0.0",
		"ts-node": "^9.0.0",
		"tslib": "^2.0.1",
		"typescript": "^4.0.3",
		"xo": "^0.33.1"
	}
}
